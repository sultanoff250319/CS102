//Problem 14
int main() {
    const char* suit[4] = {"Hearts", "Spades", "Diamonds", "Clubs"};
    const char* face[13] = {"Ace", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine", "Ten", "Jack", "Queen", "King"};
    int deck[4][13];
    int cards[52];  
    for (int i = 0; i < 52; i++) {
        cards[i] = i + 1;
    }
    srand(time(0));
    for (int i = 51; i > 0; i--) {
        int j = rand() % (i + 1);
        int temp = cards[i];
        cards[i] = cards[j];
        cards[j] = temp;
    }

    for (int i = 0; i < 52; i++) {
        deck[i / 13][i % 13] = cards[i];
    }

    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 13; j++) {
            cout << face[j] << " of " << suit[i];
            if (i < 3 || j < 12) cout << ", ";
        }
    }
    cout << endl;
    
    return 0;
}
